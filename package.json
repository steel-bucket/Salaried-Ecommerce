    "@radix-ui/react-slot": "^1.1.0",
    "@react-email/components": "^0.0.25",
    "@tanstack/react-query": "4.18.0",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/nodemailer": "^6.4.15",
    "ajv": "8.14.0",
